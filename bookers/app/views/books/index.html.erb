<header>
	<!-- Book was successfully destroyed.後で動的に動かす -->
	<h1>Books</h1>
</header>

<main class="clearfix">
	<table>
 		<tr>
			<strong><th>Title</th><th>Body</th></strong><th colspan="3"></th>
		</tr>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book) %></td>
				<td><%= link_to "Edit", edit_book_path(book) %></td>
				<td><%= link_to "Destroy", book_path(book), method: :delete %></td>
			</tr>
		<% end %>
	</table>
	<section>
		<h2>New book</h2>
		<!-- form_for部分 -->
		<%= form_for(@book) do |f| %>
			<p>Title</p>
			<p><%= f.text_field :title %></p>

			<p>Body</p>
			<p><%= f.text_area :body %></p>

			<p><%= f.submit 'Create Book' %></p>
		<% end %>
	</section>
</main>